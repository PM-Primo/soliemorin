{% include 'partials/header.html.twig' %}

{% block body %}

    <div class="slideshow__container">

        {% for project in page.find('/projets').children.published.order("title", "asc") %}
            <div class="slideshow__project">

            {{ project.title }}<br>
            {{ project.header.custom.caption }}<br>
            {{ project.header.custom.type }}<br>
            <br>

                {% for slide in project.header.custom.images %}
                    <div class="slideshow__project_slide">
                        {% set imageUrl = (slide.image|first).name %}
                        <img src="{{project.media[imageUrl].url(false)}}" alt='Toto' class="slideshow__image">
                    </div>
                {% endfor %}
            </div>

        {% endfor %}

    </div>
    <div>
        <a href="javascript:void(0);" class="slideshow__prvproject" onclick="plusProject(-1)">&lt-</a>
        <a href="javascript:void(0);" class="slideshow__nxtslide" onclick="plusSlides(1)">Slide</a>
        <a href="javascript:void(0);" class="slideshow__nxtproject" onclick="plusProject(1)">-&gt</a>
    </div>

    <div id="informations__container" class="informations__container">

        <a href="javascript:void(0);" onclick="removeInfos()" class="informations__close">[X]</a>

        <div clas="informations__column">
            {{page.find('/informations').header.custom.firstcol|markdown}}
        </div>
        <div clas="informations__column">
            {{page.find('/informations').header.custom.secondcol|markdown}}
        </div>

    </div>
    
{% endblock body %}


{% include 'partials/footer.html.twig' %}